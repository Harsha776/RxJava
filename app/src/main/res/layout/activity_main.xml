<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimple"
        android:text="SIMPLE"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMap"
        android:text="MAP"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnSimple"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnZip"
        android:text="ZIP"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnMap"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTimer"
        android:text="TIMER"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnZip"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFilter"
        android:text="Filter"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnTimer"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConcat"
        android:text="CONCAT"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnFilter"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMerge"
        android:text="MERGE"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnConcat"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDelay"
        android:text="DELAY"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnMerge"/>


</androidx.constraintlayout.widget.ConstraintLayout>